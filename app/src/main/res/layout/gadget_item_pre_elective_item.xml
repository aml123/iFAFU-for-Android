<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/electiveCourseItemIcon"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="0dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/electiveCourseItemIcon"
            android:id="@+id/electiveCourseNameIcon"
            android:src="@drawable/icon_book"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/electiveCourseName"
            android:textSize="18sp"
            android:textColor="@color/colorGobalBlue"
            android:gravity="center"
            android:singleLine="true"
            android:maxEms="12"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/electiveCourseNameIcon"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />


        <ImageView
            android:id="@+id/examViewImageThree"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_time"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/electiveTaskRuntime"
            android:textSize="13sp"
            android:textColor="@color/colorGobalBlue"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/examViewImageThree"
            android:layout_height="20dp" />


        <LinearLayout
            android:background="@drawable/shape_global_blue_stroke"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/electiveCourseBtn"
                android:textColor="@color/colorGobalBlue"
                android:background="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="@color/colorGobalBlue"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
</LinearLayout>